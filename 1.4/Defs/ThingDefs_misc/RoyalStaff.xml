<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <MVCF.ModDef>
    <defName>TR_TitularRoyalty</defName>
    <label>Titular Royalty</label>
    <description>Adding verbs to the Title Granting Staff</description>
    <ActivateFeatures>
      <li>ExtraEquipmentVerbs</li>
      <li>IntegratedToggle</li>
    </ActivateFeatures>
  </MVCF.ModDef>

  <ThingDef ParentName="BaseMeleeWeapon">
    <defName>TitularRoyalty_Staff</defName>
    <label>Staff of Royalty</label>
    <description>A ceremonial staff made of gold and jewels. While it is a solid weapon to bash people with, its main purpose is ceremonial in nature with it being used to grant titles to members of your colony</description>
    <graphicData>
      <texPath>Things/Item/Equipment/RoyalScepter</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <tradeability>None</tradeability>
    <tradeNeverStack>true</tradeNeverStack>
    <weaponTags>
      <li>TitleGrantingStaff</li>
    </weaponTags>
    <weaponClasses></weaponClasses>
    <costList>
      <Gold>8</Gold>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <MarketValue>100</MarketValue>
      <Mass>1.2</Mass>
      <WorkToMake>12000</WorkToMake>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <verbs>
      <li> <!-- GRANT TITLES -->
        <label>granttitles</label> <!-- Don't Translate -->
        <verbClass>TitularRoyalty.Verb_TitleGranter</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <commandIcon>UI/Gizmos/givetitleicon</commandIcon>
        <warmupTime>0.5</warmupTime>
        <range>5</range>
        <!--<burstShotCount>1</burstShotCount>-->
        <!--<soundAiming>OrbitalTargeter_Aiming</soundAiming>-->
        <!--<soundCast>OrbitalTargeter_Fire</soundCast>-->
        <targetable>true</targetable>
        <violent>false</violent>
        <targetParams>
          <canTargetLocations>false</canTargetLocations>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetSelf>true</canTargetSelf>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetColonists>true</onlyTargetColonists>
          <neverTargetIncapacitated>true</neverTargetIncapacitated>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="MVCF.Comps.CompProperties_VerbProps"> <!-- GRANT TITLES -->
        <compClass>MVCF.Comps.Comp_VerbProps</compClass>
        <ConsiderMelee>true</ConsiderMelee> <!-- If true, it will act like a melee weapon -->
        <verbProps>
          <li>
            <label>granttitles</label> <!-- Don't Translate, grabs the verb with the same label -->
            <visualLabel>Grant Titles</visualLabel> <!-- these don't have translate, definjected will probably be required for translations -->
            <description>Use the Scepter of Royalty to grant your pawn a title</description>
            <canBeToggled>false</canBeToggled>
            <graphic>
              <texPath>UI/Gizmos/givetitleicon</texPath>
              <graphicClass>Graphic_Single</graphicClass>
            </graphic>
          </li>
        </verbProps>
      </li>
    </comps>
  </ThingDef>

</Defs>